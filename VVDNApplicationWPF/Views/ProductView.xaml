<Page x:Class="VVDNApplicationWPF.Views.ProductView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VVDNApplicationWPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <TextBlock Margin="5"  Grid.Row="0" Grid.Column="0" Text="Product Id"/>
        <TextBox Margin="5" x:Name="productId" Grid.Row="0" Grid.Column="1"/>

        <TextBlock Margin="5" Grid.Row="1" Grid.Column="0" Text="Product Name"/>
        <TextBox  Margin="5" x:Name="productName" Grid.Row="1" Grid.Column="1" />

        <TextBlock Margin="5" Grid.Row="2" Grid.Column="0" Text="DropDown"/>
        <ComboBox Margin="5" Grid.Row="2" Grid.Column="1" ItemsSource="{Binding SelectedProduct.SelectedCategory}"/>

        <TextBlock Margin="5" Grid.Row="3" Grid.Column="0" Text="Listbox"/>
        <ListBox SelectionMode="Single" Grid.Row="3" Grid.Column="1" ItemsSource="{Binding SelectedProduct.SelectedBrand}"/>


        <TextBlock Margin="5" Grid.Row="4" Grid.Column="0" Text="Selected UOM"/>
        <ComboBox Margin="5" Grid.Row="4" Grid.Column="1" ItemsSource="{Binding SelectedProduct.SelectedUOM}"/>

        <TextBlock Margin="5" Grid.Row="5" Grid.Column="0" Text="Is Available"/>
        <CheckBox  Margin="5" Grid.Row="5" Grid.Column="1" Content="tap here" IsChecked="{Binding CheckBoxSample}"/>


        <TextBlock Margin="5" Grid.Row="6" Grid.Column="0" Text="Opening Stock"/>
        <TextBox  Margin="5" x:Name="openingstock" Grid.Row="6" Grid.Column="1" 
                  Text="{Binding SelectedProduct.OpeningStock,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}"
                 ToolTip="Please enter a positive value"/>

        <StackPanel Orientation="Horizontal" Grid.Row="7">
            <Button x:Name="Save" Content="SAVE" Click="Save_Click" Grid.Column="0" Margin="5"/>
            <Button x:Name="Cancel" Content="CANCEL" Click="Cancel_Click" Grid.Column="1" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
