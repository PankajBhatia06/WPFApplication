<Page x:Class="VVDNApplicationWPF.Views.CountryView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VVDNApplicationWPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CountryView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>


        <TextBlock Grid.Row="0" Grid.Column="0" Text="Enter Country Name"/>
        <TextBox x:Name="CountryId" Grid.Row="0" Grid.Column="1" Margin="5" Text="{Binding SelectedCountry.CountryName,Mode=TwoWay}"
                 ToolTip="Please enter a state name">
        </TextBox>

        <Button Grid.Row="1" Grid.Column="1" Margin="5" Click="Button_Click">Save</Button>
    </Grid>
</Page>
