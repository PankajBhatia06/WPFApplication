<Page x:Class="VVDNApplicationWPF.Views.ListofProducts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VVDNApplicationWPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListofProducts">

    <Grid>


        <DataGrid  Margin="5" Grid.Row="3" Grid.Column="1"  ItemsSource="{Binding ListProduct}" 
                  AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Category_ID"   Width="100" Binding="{Binding SelectedCategory}"></DataGridTextColumn>
                <DataGridTextColumn Header="Product_name"  Width="200" Binding="{Binding Name}"></DataGridTextColumn>
                <!--<DataGridTextColumn Header="Selected_Category"  Width="*" Binding="{Binding Selected_Category}"></DataGridTextColumn>-->
                <DataGridTextColumn Header="Selected_Brand"  Width="*" Binding="{Binding SelectedBrand}"></DataGridTextColumn>
                <!--<DataGridTextColumn Header="SelectedUOMs"  Width="*"></DataGridTextColumn>-->
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
